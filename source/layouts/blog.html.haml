  %head
    %title #{data.page.title} - Code, Love & Boards
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta{name:"description", content:(current_page.data.excerpt || "A blog about coding web apps, loving life and board sports by Ricardo García Vega")}
    %meta(name="author" content="Ricardo García Vega - http://twitter.com/bigardone")
    %meta(name="keywords" content="#{key_words}")
    %meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}
    %link{href: "http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel: "stylesheet"}/
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Montserrat:400,700|Lora:400,700"
    = stylesheet_link_tag "blog", media: "all"
    %link{href: "http://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.1.0/styles/foundation.min.css", rel: "stylesheet"}/
    %script{src: "http://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.1.0/highlight.min.js"}

    -# App Icons
    %link{href: "/images/apple-touch-icon-57x57.png", rel: "apple-touch-icon", sizes: "57x57"}/
    %link{href: "/images/apple-touch-icon-114x114.png", rel: "apple-touch-icon", sizes: "114x114"}/
    %link{href: "/images/apple-touch-icon-72x72.png", rel: "apple-touch-icon", sizes: "72x72"}/
    %link{href: "/images/apple-touch-icon-144x144.png", rel: "apple-touch-icon", sizes: "144x144"}/
    %link{href: "/images/apple-touch-icon-60x60.png", rel: "apple-touch-icon", sizes: "60x60"}/
    %link{href: "/images/apple-touch-icon-120x120.png", rel: "apple-touch-icon", sizes: "120x120"}/
    %link{href: "/images/apple-touch-icon-76x76.png", rel: "apple-touch-icon", sizes: "76x76"}/
    %link{href: "/images/apple-touch-icon-152x152.png", rel: "apple-touch-icon", sizes: "152x152"}/
    %link{href: "/images/favicon-160x160.png", rel: "icon", sizes: "160x160", type: "image/png"}/
    %link{href: "/images/favicon-96x96.png", rel: "icon", sizes: "96x96", type: "image/png"}/
    %link{href: "/images/favicon-32x32.png", rel: "icon", sizes: "32x32", type: "image/png"}/
    %link{href: "/images/favicon-16x16.png", rel: "icon", sizes: "16x16", type: "image/png"}/
    %meta{content: "#9f00a7", name: "msapplication-TileColor"}/
    %meta{content: "/images/mstile-144x144.png", name: "msapplication-TileImage"}/
    :javascript
      var _StatHat = _StatHat || [];
      _StatHat.push(['_setUser', 'NzIzMCDaNaL5bvEP1HQkMYwfYsQe']);
      (function() {
              var sh = document.createElement('script'); sh.type = 'text/javascript';
              sh.async = true;
              sh.src = '//www.stathat.com/javascripts/api.js';
              var s = document.getElementsByTagName('script')[0];
              s.parentNode.insertBefore(sh, s);
      })();
    - if current_page.data.canonical
      %link{rel: "canonical", href: current_page.data.canonical}/

  %body{class: 'blog'}
    %header#main_header
      .main-logo
        = link_to '/' do
          =image_tag "/images/logo.png"
      .container
        %section.center
          -if current_article
            %h1= current_page.data.title
            %h3= current_page.data.subtitle
            .meta-data
              %hr/
              posted #{current_article.date.strftime('%b %e, %Y')}
              on
              - current_article.tags.each do |tag|
                = link_to tag, tag_path(tag), class: 'tag'
          -elsif defined? tagname
            %h1 #{current_page.data.title} #{tagname}
          -else
            %h1= current_page.data.title
            %h3= current_page.data.subtitle

    %section#main_content
      .container
        %section
          %article
            = yield
            - if current_article
              #disqus_thread
              :javascript
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = 'codeloveandboards'; // required: replace example with your forum shortname

                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
              %noscript
                Please enable JavaScript to view the
                %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus.
              %a.dsq-brlink{href: "http://disqus.com"}
                comments powered by
                %span.logo-disqus Disqus
    %footer#main_footer
      - if current_article
        %ul.article-nav
          %li.previous
            = partial 'partials/post_nav_link', locals: {article: current_article.previous_article, post_type: 'previous'}
          %li.next
            = partial 'partials/post_nav_link', locals: {article: current_article.next_article, post_type: 'next'}
      %section
        .container
          .center
            %ul
              %li
                %a{href: "/blog"} Archives
              %li
                %a{href: "http://feeds.feedburner.com/CodeLoveAndBoards", target: '_blank'} RSS
            Copyright © #{Date.today.year} - Ricardo García Vega - Code, Love & Boards!


    -# Javascripts
    = javascript_include_tag 'blog'

